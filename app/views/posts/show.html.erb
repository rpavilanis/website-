<article class="row center-image">

  <div class="small-4 columns title-format">
    <span class="date"><%= @post.created_at.strftime("%A, %b, %d") %> </span>
    <br>
    <h3><%= @post.title.upcase %></h3>
    <br>
    <%= image_tag @post.picture.url(:large) %>
  </div>

  <div class="small-8 columns">
    <p><%= markdown @post.content %></p>
  </div>
</article>

<% if user_signed_in? %>
  <div id="admin-links">
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Destroy", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete me?" } %>
  </div>
<% end  %>
<div class="hr-style">
  <hr>
  <div id="share_box">
    <p>Share <%= @post.title %></p>
    <!-- Twitter -->
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @rachelpavilanis - &amp;url='<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-twitter"></i>
    </a>
    <!-- Facebook -->
    <a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= @post.title %> by @rachelpavilanis - &amp;url='<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-facebook"></i>
    </a>
    <!-- Google Plus -->
    <a onclick="javascript:window.open('http://plus.google.com/share?url=<%= @post.title %> by @rachelpavilanis - &amp;url='<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-google-plus"></i>
    </a>
    <hr>
  </div>
</div>

<%= render 'disqus' %>
