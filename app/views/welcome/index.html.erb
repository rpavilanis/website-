<section class="row small-up-1 medium-up-2 large-up-3">
  <h3> Recent Projects </h3>
    <% @projects.each do |project| %>
      <article class="hovereffect column">
        <%= link_to image_tag(project.picture.url(:medium)), project %>
        <%= project.title, :class => "hide-for-large-up"  %>
        <div class="overlay">
          <br>
          <h2 class="info"><%= link_to project.title, project %></h2>
          <p><%= project.skills %></p>
        </div>
      </article>
    <% end  %>
</section>

<hr>

<section class="row small-up-1 medium-up-2 large-up-3">
  <h3> Recent Posts </h3>
    <% @posts.each do |post| %>
      <article class="hovereffect column">
        <%= link_to image_tag(post.picture.url(:medium)), post %>
        <div class="overlay">
          <br>
          <h2><%= link_to post.title, post %></h2>
          <p><%= post.created_at.strftime("%A, %b, %d") %></p>
        </div>
      </article>
    <% end  %>
</section>
