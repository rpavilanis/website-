<div class="row small-up-1 medium-up-2 large-up-3">

  <% @projects.each do |project| %>
    <div class="column">
      <%= image_tag project.picture.url(:medium) %>
      <p><%= project.created_at.strftime("%A, %b, %d") %></p>
      <p><%= link_to project.title, project %></p>
    </div>
  <% end %>

</div>

<%= will_paginate @projects %>
