<div class="row small-up-1 medium-up-2 large-up-3">
    <% @projects.each do |project| %>
    <article class="hovereffect column">
        <%= link_to image_tag(project.picture.url(:medium)), project %>
            <div class="overlay">
      				<h2><%= link_to project.title, project %></h2>
              <p><%= post.created_at.strftime("%A, %b, %d") %></p>
            </div>
    </article>
  <% end %>
</div>

<%= will_paginate @projects %>
