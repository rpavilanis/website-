<%= form_for @project, html: { multipart: true } do |f| %>
  <% if @project.errors.any? %>
    <h2><%= pluralize(@project.errors.count, "error") %> Prevented this project from Saving: </h2>
    <ul>
      <% @project.errors.full_message.each do |msg| %>
        <li><%= msg %></li>
      <% end  %>
    </ul>
    <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description, "Describe project here." %>
  <%= f.text_area :description %>

  <%= f.label :link %>
  <%= f.text_field :link %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.submit %>

<% end %>
