<article class="row center-image">

  <div class="small-4 columns title-format">
    <br><br>
    <span class="date"><%= @project.created_at.strftime("%A, %b, %d") %> </span>
    <br>
    <h3><%= @project.title.upcase %></h3>
    <br>
    <%= image_tag @project.picture.url(:large) %>
  </div>

  <div class="small-8 columns">
      <p><%= markdown @project.description %></p>
      <p>Skills: <%= @project.skills %></p>
    <div class="button-wrapper">
      <a href="<%= @project.link %>" class="project_button" target="_blank"> Visit <%= @project.title %>'s Heroku page. </a>
    </div>
    <div class="button-wrapper">
      <a href="<%= @project.github %>" class="project_button" target="_blank"> Visit <%= @project.title %>'s Github page.</a>
    </div>
  </div>
</article>

<% if user_signed_in? %>
  <div id="admin-links">
    <%= link_to "Edit", edit_project_path(@project) %>
    <%= link_to "Destroy", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete me?" } %>
  </div>
<% end  %>

